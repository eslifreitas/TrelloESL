<p id="notice"><%= notice %></p>

<h1>Histories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Description</th>
      <th>Started at</th>
      <th>Finished at</th>
      <th>Deadline</th>
      <th>Points</th>
      <th>Requester</th>
      <th>Owner</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <td><%= history.name %></td>
        <td><%= history.status %></td>
        <td><%= history.description %></td>
        <td><%= history.started_at %></td>
        <td><%= history.finished_at %></td>
        <td><%= history.deadline %></td>
        <td><%= history.points %></td>
        <td><%= history.requester.name %></td>
        <td><%= history.owner.name %></td>
        <td><%= history.project.name %></td>
        <td><%= link_to 'Show', history %></td>
        <td><%= link_to 'Edit', edit_history_path(history) %></td>
        <td><%= link_to 'Destroy', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

